<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <OutputType>Exe</OutputType>
    <LangVersion>8</LangVersion>
    <Nullable>disable</Nullable>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|x64' ">
    <OutputPath>bin\x64\Debug\</OutputPath>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.8.0" />
    <PackageReference Include="ILMerge" Version="3.0.29" />
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
    <PackageReference Include="Mono.Cecil" Version="0.11.2" />
    <PackageReference Include="SharpDisasm" Version="1.1.11" />
    <PackageReference Include="System.ValueTuple" Version="4.5.0" />
  </ItemGroup>
  <Target Name="ILMerge">
    <Exec Command="$(ILMergeConsolePath) /out:bin\x64\Debug\Cpp2IL-Dist.exe bin\x64\Debug\Cpp2IL.exe bin\x64\Debug\Mono.Cecil.dll bin\x64\Debug\Mono.Cecil.Mdb.dll bin\x64\Debug\Mono.Cecil.Pdb.dll bin\x64\Debug\Mono.Cecil.Rocks.dll bin\x64\Debug\SharpDisasm.dll bin\x64\Debug\System.ValueTuple.dll" />
  </Target>
</Project>